#!/bin/bash

if test "$1" = "-h" ;then
	echo "Usage: dirmk file"
	exit 0
fi

for arg in $@ ;do
    if test $(echo $arg | grep "/") ;then
        if test "$(ls -ld $arg 2> /dev/null | grep .)" ;then
            echo "File Exists."
            exit 0
        fi
    else
        if test "$(ls -ld $PWD/$arg 2> /dev/null | grep .)" ;then
            echo "File Exists."
            exit 0
        fi
    fi
    mkdir $arg
    if test "$(echo $arg | grep '/')" ;then
        echo $(basename $arg):$(ls -ld $arg 2> /dev/null | perl -pe "s@.* (.*)@\1@g") 1>> $HOME/Documents/git/mgtools/conf/jmp.conf
    else
        echo $(basename $arg):$(ls -ld $PWD/$arg 2> /dev/null | perl -pe "s@.* (.*)@\1@g") 1>> $HOME/Documents/git/mgtools/conf/jmp.conf
    fi
done
