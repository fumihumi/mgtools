#!/bin/sh

usedFile='nowbackuping.tmp gauge.tmp gauge2.tmp'
allrm $usedFile

echo '[/]now backing up ... ' > nowbackuping.tmp
echo '[-]now backing up ... ' > nowbackuping.tmp
echo '[\\\]now backing up ... ' > nowbackuping.tmp
echo '[|]now backing up ... ' > nowbackuping.tmp
echo '[/]now backing up ... ' > nowbackuping.tmp
echo '[-]now backing up ... ' >> nowbackuping.tmp
echo '[\\\]Now backing up ... ' >> nowbackuping.tmp
echo '[|]nOw backing up ... ' >> nowbackuping.tmp
echo '[/]noW backing up ... ' >> nowbackuping.tmp
echo '[-]now backing up ... ' >> nowbackuping.tmp
echo '[\\\]now Backing up ... ' >> nowbackuping.tmp
echo '[|]now bAcking up ... ' >> nowbackuping.tmp
echo '[/]now baCking up ... ' >> nowbackuping.tmp
echo '[-]now bacKing up ... ' >> nowbackuping.tmp
echo '[\\\]now backIng up ... ' >> nowbackuping.tmp
echo '[|]now backiNg up ... ' >> nowbackuping.tmp
echo '[/]now backinG up ... ' >> nowbackuping.tmp
echo '[-]now backing up ... ' >> nowbackuping.tmp
echo '[\\\]now backing Up ... ' >> nowbackuping.tmp
echo '[|]now backing uP ... ' >> nowbackuping.tmp

#echo '[                    ]' > gauge.tmp
#echo '[>                   ]' >> gauge.tmp
#echo '[=>                  ]' >> gauge.tmp
#echo '[==>                 ]' >> gauge.tmp
#echo '[===>                ]' >> gauge.tmp
#echo '[====>               ]' >> gauge.tmp
#echo '[=====>              ]' >> gauge.tmp
#echo '[======>             ]' >> gauge.tmp
#echo '[=======>            ]' >> gauge.tmp
#echo '[========>           ]' >> gauge.tmp
#echo '[=========>          ]' >> gauge.tmp
#echo '[==========>         ]' >> gauge.tmp
#echo '[===========>        ]' >> gauge.tmp
#echo '[============>       ]' >> gauge.tmp
#echo '[=============>      ]' >> gauge.tmp
#echo '[==============>     ]' >> gauge.tmp
#echo '[===============>    ]' >> gauge.tmp
#echo '[================>   ]' >> gauge.tmp
#echo '[=================>  ]' >> gauge.tmp
#echo '[==================> ]' >> gauge.tmp
#echo '[===================>]' >> gauge.tmp

if test $# -eq 0 ;then
	#simple_bk &
	cp -a ~/bin/* /mnt/windows/bk/ 
	cp -a ~/ctf/* /mnt/windows/bk/ 
	cp -a ~/Desktop/* /mnt/windows/bk/ 
	cp -a ~/Documents/* /mnt/windows/bk/ 
	cp -a ~/Downloads/* /mnt/windows/bk/ 
	cp -a ~/neosnippets/* /mnt/windows/bk/ 
	cp -a ~/peda/* /mnt/windows/bk/ 
	cp -a ~/rc/* /mnt/windows/bk/ 
	cp -a ~/tmp/* /mnt/windows/bk/ 
fi

if test $# -eq 1 ;then
	arg=$1
	if test $1 = "./" ;then
		arg=$(pwd)
	fi
	if test "$(echo $arg | grep -e bin -e ctf -e Documents -e Downloads -e tmp)" ;then
		cp -a ~/$1/* /mnt/windows/bk/$1/
	else
		echo You can use \[bin/ctf/dc/tmp/bashrc\].
		exit 0
	fi
fi

if test $# -eq 2 ;then
	if test $2 = "bin" ;then
		cp -a $1 /mnt/windows/bk/bin/
	elif test $2 = "dc" ;then
		cp -a $1 /mnt/windows/bk/bin/
	elif test $2 = "home" ;then
		cp -a $1 /mnt/windows/bk/
	elif test $2 = "tmp" ;then
		cp -a $1 /mnt/windows/bk/tmp/
	fi
fi

#while test "$(ps u | grep '.*:.*cp\ -a' | perl -pe 's/.*grep.*//g')" ;do
#	#cat nowbackuping.tmp | while read var ;do
#		#if test -e gauge2.tmp ;then
#			#writedel "$var" "$(cat gauge2.tmp)"
#			writedel "$(ps u | perl -pe 's/.*:\d\d\s(cp\s-a.*)/\1/g')"
#		#fi
#	#done
#done
#del
echo '[+]BACKING UP FINISHED.'

allrm $usedFile

