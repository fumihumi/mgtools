#!/bin/sh

hflg=0

#if test $# -eq 0 ;then
#	hflg=1
#fi

while getopts h opt ;do
	case $opt in
		h)hflg=1;;
	esac
done
shift $(($OPTIND - 1))

if test $hflg -eq 1 ;then
	echo "Usage: bkup"
	exit 0
fi

rsync -rlpgoDuv ~/bin/ /mnt/windows/bk/bin/
rsync -rlpgoDuv ~/ctf/ /mnt/windows/bk/ctf/
rsync -rlpgoDuv ~/Desktop/ /mnt/windows/bk/Desktop/
rsync -rlpgoDuv ~/Documents/ /mnt/windows/bk/Documents/
rsync -rlpgoDuv ~/Downloads/ /mnt/windows/bk/Downloads/
rsync -rlpgoDuv ~/neosnippets/ /mnt/windows/bk/neosnippets/
rsync -rlpgoDuv ~/peda/ /mnt/windows/bk/peda/
rsync -rlpgoDuv ~/rc/ /mnt/windows/bk/rc/
rsync -rlpgoDuv ~/tmp/ /mnt/windows/bk/tmp/
