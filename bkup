#!/bin/sh

hflg=0

#if test $# -eq 0 ;then
#	hflg=1
#fi

while getopts h opt ;do
	case $opt in
		h)hflg=1;;
	esac
done
shift $(($OPTIND - 1))

if test $hflg -eq 1 ;then
	echo "Usage: bkup [option]
[+]UsageOption:
   default: all
        rc: rc_bkup"
	exit 0
fi

if test $# -eq 0 ;then
	rsync -auv ~/bin/ /mnt/windows/bk/bin/
	rsync -auv ~/ctf/ /mnt/windows/bk/ctf/
	rsync -auv ~/esktop/ /mnt/windows/bk/esktop/
	rsync -auv ~/ocuments/ /mnt/windows/bk/ocuments/
	rsync -auv ~/ownloads/ /mnt/windows/bk/ownloads/
	rsync -auv ~/neosnippets/ /mnt/windows/bk/neosnippets/
	rsync -auv ~/peda/ /mnt/windows/bk/peda/
	rsync -auv ~/rc/ /mnt/windows/bk/rc/
	rsync -auv ~/tmp/ /mnt/windows/bk/tmp/
	rsync -auv ~/.bashrc /mnt/windows/bk/rc/bashrc
	rsync -auv /usr/share/vim/vimrc ~/rc/vimrc
elif test $# -eq 1 ;then
	if test $1 = "rc" ;then
		rsync -auv ~/.bashrc /mnt/windows/bk/rc/bashrc
		rsync -auv /usr/share/vim/vimrc ~/rc/vimrc
	else
		rsync -auv ~/$1/ /mnt/windows/bk/$1/
	fi
fi




#rsync -urlpgov ~/bin/ /mnt/windows/bk/bin/
#rsync -urlpgov ~/ctf/ /mnt/windows/bk/ctf/
#rsync -urlpgov ~/esktop/ /mnt/windows/bk/esktop/
#rsync -urlpgov ~/ocuments/ /mnt/windows/bk/ocuments/
#rsync -urlpgov ~/ownloads/ /mnt/windows/bk/ownloads/
#rsync -urlpgov ~/neosnippets/ /mnt/windows/bk/neosnippets/
#rsync -urlpgov ~/peda/ /mnt/windows/bk/peda/
#rsync -urlpgov ~/rc/ /mnt/windows/bk/rc/
#rsync -urlpgov ~/tmp/ /mnt/windows/bk/tmp/
#rsync -urlpgov ~/.bashrc /mnt/windows/bk/rc/bashrc
